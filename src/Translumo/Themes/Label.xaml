<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style BasedOn="{StaticResource MaterialDesignLabel}" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style
        x:Key="PostscriptLabel"
        BasedOn="{StaticResource MaterialDesignLabel}"
        TargetType="{x:Type Label}">
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style
        x:Key="SecondaryHeaderLabel"
        BasedOn="{StaticResource MaterialDesignLabel}"
        TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style
        x:Key="HeaderLabel"
        BasedOn="{StaticResource MaterialDesignLabel}"
        TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style
        x:Key="SecondaryLabel"
        BasedOn="{StaticResource MaterialDesignLabel}"
        TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style
        x:Key="ControlCaptionLabel"
        BasedOn="{StaticResource {x:Type Label}}"
        TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="4,0,0,0" />
    </Style>

    <Style
        x:Key="PanelCaptionLabel"
        BasedOn="{StaticResource MaterialDesignLabel}"
        TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryHueDarkBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style
        x:Key="LightLabel"
        BasedOn="{StaticResource MaterialDesignLabel}"
        TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryHueLightBrush}" />
    </Style>

</ResourceDictionary>