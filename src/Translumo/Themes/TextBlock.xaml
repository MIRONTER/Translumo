<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="TextBlockBase"
        BasedOn="{StaticResource MaterialDesignTextBlock}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style
        x:Key="NotificationTextBlock"
        BasedOn="{StaticResource TextBlockBase}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style
        x:Key="ButtonTextBlock"
        BasedOn="{StaticResource TextBlockBase}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style
        x:Key="AdditionalTextBlock"
        BasedOn="{StaticResource TextBlockBase}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="PrimaryHeaderRun" TargetType="{x:Type Run}">
        <Setter Property="FontSize" Value="19" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="SecondaryHeaderRun" TargetType="{x:Type Run}">
        <Setter Property="FontSize" Value="15" />
    </Style>
</ResourceDictionary>